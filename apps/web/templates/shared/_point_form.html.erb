
<% submit_label = (class_name == 'new' ? 'Create' : 'Update') %>
<% method = (class_name == 'new' ? 'post' : 'patch') %>

<%= form_for :point, request_path, id: "point_remote_form",
  class: "form-horizontal #{class_name}", method: method do
    div class: "form-group" do
      label :name
      text_field :name, class: "form-control"
    end
    div class: "form-group" do
      label :coordinates
      text_field :coordinates, class: "form-control"
    end
    div class: "form-group" do
      label :object_type
      select :object_type, (Point::OBJECT_TYPES.keys.map { |k| [k, k] }.to_h), class: "form-control"
    end
    div class: "form-group" do
      label :object_class
      select :object_class, Point::OBJECT_CLASSES.map { |k| [k, k] }.to_h, class: "form-control"
    end
    div class: "form-group" do
      label :terc
      text_field :terc, class: "form-control"
    end
    div class: "form-group" do
      label :voivodeship
      text_field :voivodeship, class: "form-control"
    end
    div class: "form-group" do
      label :county
      text_field :county, class: "form-control"
    end
    div class: "form-group" do
      label :commune
      text_field :commune, class: "form-control"
    end
    submit submit_label, class: "btn btn-default"
    
    if class_name == 'edit'
      tag(:a, 'Delete', id: 'delete_point', class: 'btn btn-danger', href: request_path) 
    end
  end
%>

<div class="col-md-4">
  <div class="row">
    <div class="btn-group">
    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      Add <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
      <li><a id="point">Point</a></li>
      <li><a id="line">Line</a></li>
      <li><a id="polygon">Polygon</a></li>
    </ul>
  </div>
  <div class="row">
    <div class="col-md-8">
      <div id="form-holder">
        <div id="point_remote_form_holder" class="col-md-12">
          <%= render partial: "shared/point_form", locals: { class_name: 'new', request_path: routes.points_path } %>
        </div>

        <div id="edit_point_remote_form_holder" class="col-md-12">
          <%= render partial: "shared/point_form",
            locals: { class_name: 'edit', request_path: routes.point_path(PointRepository.new.first) } %>
        </div>

        <div id="line_remote_form_holder" class="col-md-12">
          <%= render partial: "shared/line_form", locals: { class_name: 'new', request_path: routes.lines_path } %>
        </div>

        <div id="edit_line_remote_form_holder" class="col-md-12">
          <%= render partial: "shared/line_form",
            locals: { class_name: 'edit', request_path: routes.line_path(LineRepository.new.first) } %>
        </div>

        <div id="polygon_remote_form_holder" class="col-md-12">
          <%= render partial: "shared/polygon_form", locals: { class_name: 'new', request_path: routes.polygons_path } %>
        </div>

        <div id="edit_polygon_remote_form_holder" class="col-md-12">
          <%= render partial: "shared/polygon_form",
            locals: { class_name: 'edit', request_path: routes.polygon_path(PolygonRepository.new.first) } %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>

<div class="col-md-8" id="maps">
  <div id="mappage">
    <div id="map"></div>
  </div>
</div>
